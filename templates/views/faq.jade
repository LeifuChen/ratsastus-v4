	script.
					[].forEach.call(document.querySelectorAll("h2"), function(questionEl) {
					    var answerNodes = [];
					    var node = questionEl.nextSibling;
					    var stopTagNames = ["H1","H2","SCRIPT","STYLE"];
					    while (!!node && stopTagNames.indexOf(node.tagName) === -1 && node.cla) {
					        answerNodes.push(node);
					        node = node.nextSibling;
					    }
					    if (answerNodes.length === 0) {
					        return;
					    }

					    var parent = questionEl.parentElement;
					    var wrapper = document.createElement("div");
					    wrapper.classList.add("answer");
					    parent.insertBefore(wrapper, questionEl.nextSibling);

					    [].forEach.call(answerNodes, function(answerNode) {
					        parent.removeChild(answerNode);
					        wrapper.appendChild(answerNode);
					    });
					});

					// Attach 'expand/collapse' click handlers to question h2 elements:
					//
					[].forEach.call(document.querySelectorAll("h2"), function(questionEl) {
					    questionEl.addEventListener("click", function() {
					        questionEl.classList.toggle("opened");
					    });
					});

					// Gather all elements between `h1` elements (i.e. questions & answer) into
					// wrapper divs:
					//

					[].forEach.call(document.querySelectorAll("h1"), function(sectionEl) {
					    var faqNodes = [];
					    var node = sectionEl.nextSibling;
					    var stopTagNames = ["H1", "SCRIPT","STYLE"];
					    while (!!node && stopTagNames.indexOf(node.tagName) === -1) {
					        faqNodes.push(node);
					        node = node.nextSibling;
					    }
					    if (faqNodes.length === 0) {
					        return;
					    }

					    var parent = sectionEl.parentElement;
					    var wrapper = document.createElement("div");
					    wrapper.classList.add("section");
					    parent.insertBefore(wrapper, sectionEl.nextSibling);

					    [].forEach.call(faqNodes, function(faqNode) {
					        parent.removeChild(faqNode);
					        wrapper.appendChild(faqNode);
					    });
					});

					// Attach 'expand/collapse' click handlers to question h1 elements:
					//
					[].forEach.call(document.querySelectorAll("h1"), function(sectionEl) {
					    sectionEl.addEventListener("click", function() {
					        sectionEl.classList.toggle("expanded");
					    });
					});

					// card view wrapper
					//
					[].forEach.call(document.querySelectorAll("h1"), function(cardEl) {
					    var cardNodes = [];
					    var node = cardEl.nextSibling;
					    var stopTagNames = ["H1", "SCRIPT","STYLE"];
					    while (!!node && stopTagNames.indexOf(node.tagName) === -1) {
					        cardNodes.push(node);
					        node = node.nextSibling;
					    }
					    if (cardNodes.length === 0) {
					        return;
					    }
					    cardNodes.unshift(cardEl);
					    var parent = cardEl.parentElement;
					    var wrapper = document.createElement("div");
					    wrapper.classList.add("card");
					    parent.insertBefore(wrapper, cardEl);

					    [].forEach.call(cardNodes, function(cardNode) {
					        parent.removeChild(cardNode);
					        wrapper.appendChild(cardNode);
					    });
					});
					
					jQuery(function($) {
						
						var comments = $('#comments');
						var input = $('.comment-field-input');
						var submit = comments.find('button[type=submit]');

						
						// Scroll to comments and focus input field
						function scrollToComments(e) {
							
							e.preventDefault();
							
							$('html, body').animate({ scrollTop: comments.offset().top }, 250);
							
							input.eq(0).focus();
						}
						$('[href="#comments"]').click( scrollToComments );
						
						
						
						// Check if field has content: enable/disable submit. Disable by default
						submit.attr('disabled','disabled');
						input.keyup(function() {
							if ($.trim($(this).val())) {
								submit.removeAttr('disabled');
							} else {
								submit.attr('disabled','disabled');
							}
						});
					});
