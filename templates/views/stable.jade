							}
					]
				},
				{
					"featureType":"all",
					"elementType":"labels.text",
					"stylers":[
							{
									"visibility":"on"
							}
					]
				},
				{
					"featureType":"landscape",
					"elementType":"all",
					"stylers":[
							{
									"color":"#f2f2f2"
							}
					]
				},
				{
					"featureType":"landscape",
